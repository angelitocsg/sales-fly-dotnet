@using SalesFly.Shared.Models

@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject IAeroportoService aeroportoService;
@inject IVooService vooService;

@page "/pesquisar-voos"

<h1 class="mt-3 mb-3">Pesquisar vôos</h1>

<div class="card">
    <div class="card-body">
        <div class="row">

            <ListaAeroportos aeroportos=@aeroportos id="origem" label="Origem" value=@origem
                OnSelectItem=@HandleOrigemSelect />

            <ListaAeroportos aeroportos=@aeroportos id="destino" label="Destino" value=@destino
                OnSelectItem=@HandleDestinoSelect />

            <div class="col-lg-3 mb-3">
                <label for="data" class="form-label">Data</label>
                <input type="date" class="form-control" id="data" name="data" @bind-value=data>
            </div>
        </div>
        <button type="button" class="btn btn-dark" @onclick=HandlePesquisar>Pesquisar</button>
    </div>
</div>

<div class="mt-4 row">
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Origem</th>
                                <th>Destino</th>
                                <th>Data</th>
                                <th>Saída</th>
                                <th>Chegada</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (voos != null && voos?.Count() > 0)
                                @foreach (var item in voos)
                                {
                                    <tr>
                                        <td>@item.Origem</td>
                                        <td>@item.Destino</td>
                                        <td>@item.DataSaida.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Saida</td>
                                        <td>@item.Chegada</td>
                                        <td class="text-end">
                                            <button type="button" @onclick=@(e => HandleAdicionarAoCarrinho(item))
                                        class="btn btn-secondary btn-sm text-nowrap">Adicionar ao
                                                carrinho</button>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td colspan="6">

                                            <table class="table table-sm">
                                                <tbody>
                                                    <tr>
                                                        <td>@item.Origem</td>
                                                        <td>@item.Destino</td>
                                                        <td>@item.Empresa</td>
                                                        <td class="text-end">@item.Valor</td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </td>
                                    </tr>
                                }
                            else
                            {
                                <tr>
                                    <td colspan="6">
                                        Sem vôos para a pesquisa atual.
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Carrinho</h5>

                <table class="table">
                    <tbody>
                        @foreach (var item in carrinho.Items)
                        {
                            <tr>
                                <td>@item.Origem > @item.Destino</td>
                                <td class="text-end">R$ @item.Valor</td>
                                <td class="text-end">
                                    <BotaoRemoveCarrinho OnClickRemove=@HandleRemoverDoCarrinho LineId=@item.LineId />
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th class="text-end" colspan="2">R$ @carrinho.Total</th>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>

                <div class="mt-3 d-grid">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#checkoutModal">
                        Finalizar compra
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="checkoutModalLabel">Pagamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <ul class="nav nav-tabs" id="myTab" role="tablist">

                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="dinheiro-tab" data-bs-toggle="tab"
                            data-bs-target="#dinheiro" type="button" role="tab" aria-controls="dinheiro"
                            aria-selected="true">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-cash" viewBox="0 0 16 16">
                                <path d="M8 10a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                                <path
                                    d="M0 4a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V4zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V6a2 2 0 0 1-2-2H3z" />
                            </svg>
                            <span>Dinheiro</span>
                        </button>
                    </li>

                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="cartao-credito-tab" data-bs-toggle="tab"
                            data-bs-target="#cartao-credito" type="button" role="tab" aria-controls="cartao-credito"
                            aria-selected="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-credit-card" viewBox="0 0 16 16">
                                <path
                                    d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1H2zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V7z">
                                </path>
                                <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1z">
                                </path>
                            </svg>
                            <span>Cartão de crédito</span>
                        </button>
                    </li>

                </ul>

                <div class="tab-content" id="myTabContent">

                    <div class="tab-pane fade show active border border-top-0 p-3" id="dinheiro" role="tabpanel"
                        aria-labelledby="dinheiro-tab">
                        <div class="mb-3">
                            <label class="form-label">Valor</label>
                            <input type="text" class="form-control" value=@(string.Format("R$ {0:#.00}",carrinho.Total))
                                readonly>
                        </div>
                    </div>

                    <div class="tab-pane fade border border-top-0 p-3" id="cartao-credito" role="tabpanel"
                        aria-labelledby="cartao-credito-tab">
                        <div class="mb-3">
                            <label class="form-label">Número do cartão</label>
                            <input type="text" class="form-control" placeholder="0000 0000 0000 0000 0000">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nome impresso</label>
                            <input type="text" class="form-control" placeholder="Nome">
                        </div>

                        <div class="row">
                            <div class="col-5 col-sm-4 mb-3">
                                <label class="form-label">Vencimento</label>
                                <div class="d-flex">
                                    <input type="text" class="form-control" placeholder="00">&nbsp;
                                    <input type="text" class="form-control" placeholder="0000">
                                </div>
                            </div>

                            <div class="col-3 mb-3">
                                <label class="form-label">CVV</label>
                                <input type="text" class="form-control" placeholder="000">
                            </div>
                        </div>

                        <div>
                            <label class="form-label">Parcelas</label>
                            <select class="form-select">
                                <option>1x R$ @(string.Format("{0:#.00}",carrinho.Total))</option>
                                <option>2x R$ @(string.Format("{0:#.00}",carrinho.Total / 2))</option>
                                <option>3x R$ @(string.Format("{0:#.00}",carrinho.Total / 3))</option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                    @onclick=HandleEfetuarPagamento>Efetuar pagamento</button>
            </div>
        </div>
    </div>
</div>

@code {
    private IEnumerable<Aeroporto> aeroportos;
    private IEnumerable<Voo> voos;
    private Carrinho carrinho;

    [CascadingParameter]
    public string Nome { get; set; }

    private string origem { get; set; }
    private string destino { get; set; }
    private DateTime data { get; set; } = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        carrinho = new Carrinho(Nome);
        aeroportos = await aeroportoService.GetAeroportosAsync();
        await base.OnInitializedAsync();
    }

    private async Task HandlePesquisar()
    {
        if (string.IsNullOrWhiteSpace(origem))
            return;
        if (string.IsNullOrWhiteSpace(destino))
            return;
        if (data == DateTime.MinValue)
            return;

        voos = await vooService.GetVoosAsync(origem, destino, data);
    }

    private void HandleOrigemSelect(ChangeEventArgs e)
    {
        origem = string.Empty;

        if (e.Value.ToString().Contains("--"))
            return;

        origem = e.Value.ToString();
    }

    private void HandleDestinoSelect(ChangeEventArgs e)
    {
        destino = string.Empty;

        if (e.Value.ToString().Contains("--"))
            return;

        destino = e.Value.ToString();
    }

    private void HandleAdicionarAoCarrinho(Voo voo)
    {
        carrinho.AdicionaItem(voo);
    }

    private void HandleRemoverDoCarrinho(int lineId)
    {
        Console.WriteLine("REMOVER " + carrinho.Items.Count());
        carrinho.RemoveItem(lineId);
        Console.WriteLine("REMOVER " + carrinho.Items.Count());
        StateHasChanged();
    }

    private async Task HandleEfetuarPagamento()
    {
        await localStorage.SetItemAsync("meus_voos", carrinho);
        carrinho = new Carrinho(Nome);
        voos = null;
    }
}